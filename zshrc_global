# Get the directory where this file lives, so we can reference other scripts relative to it
DOTFILES_DIR="${${(%):-%N}:A:h}"

# Source autoupdate script
# might update the config files
if [ -f "$DOTFILES_DIR/autoupdate/autoupdate.sh" ]; then
    source "$DOTFILES_DIR/autoupdate/autoupdate.sh"
fi

# source global config file
source $DOTFILES_DIR/zshrc_global_config